<% provide :title, "A Post" %>
<h1><%= User.find_by(id: @post.user_id).name%>Post</h1>
<div class = "post-container">
  <div class = "title">
    <p><%= @post.title %></p>
  </div>
  <div class = "body">
    <p><%= @post.body %></p>
  </div>
</div>

<%= link_to "All Posts", posts_path %>
<%= link_to "Edit Post", edit_post_path(@post) %>

